# STT Provider Chain (comma-separated, priority order)
STT_PROVIDER_CHAIN=deepgram

# Deepgram Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# LLM Provider Chain (comma-separated, priority order)
# Only OpenAI is supported
LLM_PROVIDER_CHAIN=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Model Configuration by Service
# Translation Model Fallback - Used ONLY when LLM is used as fallback provider for translation
# Note: Primary translation uses Hugging Face (HF_TRANSLATION_MODEL), this is only for LLM fallback
TRANSLATION_MODEL_FALLBACK=gpt-4o

# Summary Model - Used for generating live summaries of conversations
SUMMARY_MODEL=gpt-4o

# Questions Model - Used for generating relevant questions/replicas based on conversation
QUESTIONS_MODEL=gpt-4o

# Translation Provider Chain (comma-separated, priority order)
# Hugging Face is primary, OpenAI LLM is fallback
TRANSLATE_PROVIDER_CHAIN=huggingface,llm

# Hugging Face Configuration
HF_API_TOKEN=your_huggingface_api_token_here
HF_TRANSLATION_MODEL=Helsinki-NLP/opus-mt-en-es

# Provider Resilience Configuration
PROVIDER_FAILOVER_COOLDOWN_SECONDS=120
PROVIDER_MAX_RETRIES=2
PROVIDER_TIMEOUT_SECONDS=15
PROVIDER_CIRCUIT_BREAKER_FAILURES=5
PROVIDER_CIRCUIT_BREAKER_TIMEOUT_SECONDS=60

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=3200
AUDIO_BUFFER_SECONDS=3
AUDIO_BATCH_SECONDS=10

# Language Detection
DEFAULT_LANGUAGE_HINT=en
AUTO_DETECT_LANGUAGE=true

# STT Health and Reconnection Configuration
STT_HEALTH_CHECK_INTERVAL_SECONDS=10
STT_NO_TRANSCRIPT_TIMEOUT_SECONDS=30
STT_MAX_RECONNECT_ATTEMPTS=5
STT_RECONNECT_BACKOFF_BASE=2.0
STT_RECONNECT_MAX_WAIT_SECONDS=30

# Summary Configuration
SUMMARY_UPDATE_SECONDS=60
SUMMARY_MAX_CONTEXT_MINUTES=20

# Questions Configuration
QUESTIONS_UPDATE_SECONDS=300
QUESTIONS_MAX_COUNT=10

# UI Configuration
UI_THEME=dark
UI_FONT_SIZE=12

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ROTATION_MAX_BYTES=10485760
LOG_ROTATION_BACKUP_COUNT=5

